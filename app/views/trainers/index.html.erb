<h1>Our Trainers</h1>
<ul>
  <% @trainers.each do |trainer_user| %>
    <div style="display: flex; align-items: center;">
      <%= image_tag(trainer_user.trainer.profile, size: "170x180", style: 'border-radius: 50%;', class: 'css_class') %>
      <div style="margin-left: 10px;">
        <p>Name: <%= trainer_user.trainer.name.capitalize %></p>
        <%= link_to "View Profile", trainer_path(trainer_user.trainer) %>
      </div>
    </div>
    <br><br>
    <!-- Add other attributes specific to Trainer model -->
  <% end %>
</ul>
<% if current_user.role == "client" %>
    <%= link_to "Back to your profile", client_path(current_user) %>
<% end %>

<div class="text-center">
  <div class="digg_pagination">
    <div class="page_info">
      <%= will_paginate @trainers %>
    </div>
  </div>
</div>