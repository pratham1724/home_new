<!DOCTYPE html>
<html>
  <head>
  
 <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  </head>

  <body>
    <div id="chatroom_continer" class="row, bg-dark text-light">
      <div id="side_panel" class="col-md-4 col-sm-4">
        <h5> Hi <%= @current_user.email %> </h5>

        <h4> Trainers </h4>
        <div>
          <%#= turbo_stream_from "users" %>
          <%= turbo_stream_from "trainers" %>
          <div id="users">
            <%= render @users %>
          </div>
        </div>
        <h4> Rooms </h4>
        <%= render partial: "layouts/new_room_form" %>
        <div>
          <%= turbo_stream_from "rooms" %>
          <div id="rooms">
            <%= render @rooms %>
          </div>
        </div>
      </div>
      <div id="room_container" class="col-md-8 col-sm-8 bg-dark text-light">
      <% if @single_room %>
        <%= turbo_stream_from @single_room %>
        <div id="messages">
          <%= render @messages %>
        </div>
        <%= render partial: 'layouts/new_message_form' %>
        <h4 class="text-center"> <%= @user&.email || @single_room.name %> </h4>
      <% end %>
      </div>

      <div class="col-md-10 bg-dark">
        The chat box stays here
      </div>
    </div>
  </body>
</html>